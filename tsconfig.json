{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "verbatimModuleSyntax": false,
    "types": [
      "node",
      "react",
      "react-dom",
      "react-router-dom",
      "yup",
      "formik",
      "chart.js",
      "classnames"
    ],
    "paths": {
      "@/*": [
        "./resources/scripts/*"
      ],
      "@definitions/*": [
        "./resources/scripts/api/definitions/*"
      ],
      "@feature/*": [
        "./resources/scripts/components/server/features/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-tw-template"
      }
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./resources/scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
